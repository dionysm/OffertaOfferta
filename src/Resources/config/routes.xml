<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="api.offerta.test" path="/api/offerta/test" methods="GET">
        <default key="_controller">Dio\OffertaOfferta\Controller\TestController::apiTest</default>
        <default key="_routeScope">
            <list>
                <string>api</string>
            </list>
        </default>
    </route>

    <route id="offerta.test" path="/offerta/test" methods="GET">
        <default key="_controller">Dio\OffertaOfferta\Controller\TestController::storefrontTest</default>
        <default key="_routeScope">
            <list>
                <string>storefront</string>
            </list>
        </default>
    </route>
</routes>