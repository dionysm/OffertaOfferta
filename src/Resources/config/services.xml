<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Standard: automatisch alle Services und Controller registrieren -->
        <defaults autowire="true" autoconfigure="true" public="false"/>

        <!-- Alle Klassen aus deinem Plugin-Namespace automatisch einbinden -->
        <prototype namespace="Dio\OffertaOfferta\" resource="../../*" />

        <!-- Dein LowestPriceService -->
        <service id="Dio\OffertaOfferta\Service\LowestPriceService">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <!-- Subscriber fÃ¼r PreisÃ¤nderungen -->
        <service id="Dio\OffertaOfferta\EventSubscriber\ProductPriceChangeSubscriber">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Subscriber fÃ¼r ProductPage -->
        <service id="Dio\OffertaOfferta\Subscriber\ProductPageLoadedSubscriber">
            <argument type="service" id="Dio\OffertaOfferta\Service\LowestPriceService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- ðŸ‘‡ HIER neu: dein Storefront-Controller -->
        <service id="Dio\OffertaOfferta\Storefront\Controller\TestController"
                 public="true"
                 autowire="true"
                 autoconfigure="true">
            <argument type="service" id="Dio\OffertaOfferta\Service\LowestPriceService"/>
        </service>
    </services>
</container>
